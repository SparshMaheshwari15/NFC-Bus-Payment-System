<header>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Display flash messages (success and error) -->
    <div class="container mt-2">
        <% if (success_msg!="" ) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success_msg %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
            </div>
            <% } %>

                <% if (error_msg!="" ) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error_msg %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                    </div>
                    <% } %>
    </div>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm py-3">
        <div class="container">
            <a class="navbar-brand" href="/users/view" style="font-weight: bold;">NFC Bus Payment Dashboard</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/users/view" style="font-weight: 500;">View Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users/add" style="font-weight: 500;">Add User</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users/addBalance" style="font-weight: 500;">Add Balance</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users/deductBalanceAdmin" style="font-weight: 500;">Deduct
                            Balance</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users/manage" style="font-weight: 500;">Manage Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users/signup" style="font-weight: 500;">Sign Up</a>
                    </li>
                    <%if(!currUser){%>
                        <li class="nav-item">
                            <a class="nav-link" href="/users/login" style="font-weight: 500;">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="font-weight: 500;">Not logged in</a>
                        </li>
                        <%}%>
                            <%if(currUser){%>
                                <li class="nav-item">
                                    <a class="nav-link" href="/api/users/logout" style="font-weight: 500;">Logout</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" style="font-weight: 500;"> <b>logged in <%=currUser.username%> </b> </a>
                                </li>
                                <%}%>
                </ul>
            </div>
        </div>
    </nav>
</header>