<%- include('../partials/header') %>
    <div class="container mt-5">
        <h1 class="text-center mb-4 ">User top up history</h1>
        <table class="table table-striped table-bordered">
            <thead class="bgColor .thead-dark">
                <tr>
                    <th>Card ID</th>
                    <th>Student ID</th>
                    <th>Student Name</th>
                    <th>Balance</th>
                    <th>Last top up date</th>
                    <th>Last top up amount</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user=> { %>
                    <% const lastTopUpDate=user.last_top_up_date.toLocaleString('en-US', { weekday: 'short' ,
                        year: 'numeric' , month: 'short' , day: 'numeric' , hour: '2-digit' , minute: '2-digit' ,
                        second: '2-digit' , hour12: false }).replace(',', '' ); 
                        const aa=user.last_top_up_amount>=0? user.last_top_up_amount: 0;
                        %>
                        <tr>
                            <td>
                                <%= user.card_id %>
                            </td>
                            <td>
                                <%= user.student_id %>
                            </td>
                            <td>
                                <%= user.student_name %>
                            </td>
                            <td>₹<%= user.balance %>
                            </td>
                            <td>
                                <%= lastTopUpDate %>
                            </td>
                            <td>
                                ₹<%= aa %>
                            </td>
                        </tr>
                        <% }) %>
            </tbody>
        </table>
    </div>
    <%- include('../partials/footer') %>